
<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-10-fullhd is-12">
                <div id="articles">
                    {{#each articles}}
                        <article class="media">
                            <figure class="media-left">
                                <p class="image is-128x128">
                                    <a href=`http://news.mit.edu/{{this.link}}` target="_blank"><img
                                            src={{this.imageUrl}}></a>

                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <h2 class="subtitle"><a href={{this.link}}>{{this.title}}</a></h2>
                                    <p>{{this.summary}}
                                        <br>
                                    </p>
                                </div>
                            </div>
                        </article>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</section>